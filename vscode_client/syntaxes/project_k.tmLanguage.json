{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "project_k",
    "fileTypes": ["ll"],
    "scopeName": "source.project_k",
    "patterns": [
        {
            "include": "#high_level_tokens"
        },
        {
            "include": "#actions"
        },
        {
            "include": "#string"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#comments"
        }
    ],
    "repository": {
        "comments" : {
            "patterns": [
                {
                    "match": "((//).*)$",
					"captures": {
						"1": {
							"name": "comment.line.double-slash.dart"
						}
					}
                }
            ]
        },
        "variables":{
            "patterns": [
                {
                    "name":"variable.project_k",
                    "match": "[a-zA-z]"
                }
            ]
        },
        "string" :{
            "patterns": [
                {
                    "name":"string.quoted.double.project_k",
                    "match": "\".*\""
                }
            ]
        },
        "actions":{
            "patterns": [
                {
                    "name":"entity.name.type.interface.project_k",
                    "match": "(navigate|click|back)"
                }
            ]
        },
        "high_level_tokens":{
            "patterns": [
                {
                    "name": "entity.name.function.project_k",
                    "match": "#[a-z]+"
                }
            ]
        }
    }
}