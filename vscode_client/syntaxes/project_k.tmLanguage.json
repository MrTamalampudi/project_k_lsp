{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "project_k",
    "fileTypes": ["ll"],
    "scopeName": "source.project_k",
    "patterns": [
        {
            "name": "entity.name.type.interface.project_k",
            "match": "#[a-z]+"
        },
        {
            "name": "constant.numeric",
            "match": "[+-]?(\\d+(\\.\\d*)?)$"
        },
        {
            "include": "#methods"
        },
        {
            "include": "#parameters"
        },
        {
            "include": "#string"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#control-flow"
        },
        {
            "include": "#boolean"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments" : {
            "patterns": [
                {
                    "match": "((//).*)$",
					"captures": {
						"1": {
							"name": "comment.line.double-slash.dart"
						}
					}
                }
            ]
        },
        "variables":{
            "patterns": [
                {
                    "name":"variable.project_k",
                    "match": "[a-zA-z_][a-zA-z0-9_]*"
                }
            ]
        },
        "string" :{
            "patterns": [
                {
                    "name":"string.quoted.double.project_k",
                    "match": "\".*\""
                }
            ]
        },
        "methods":{
            "patterns": [
                {
                    "name":"entity.name.function.project_k",
                    "match": "(navigate|click|back|forward|refresh|get|wait|assert|enter|close)" 
                }
            ]
        },
        "parameters":{
            "patterns": [
                {
                    "name":"entity.name.type",
                    "match": "(title|url|element|attribute|current)" 
                }
            ]
        },
        "control-flow":{
            "patterns": [
                {
                    "name":"keyword.control",
                    "match": "(if|else|while)" 
                }
            ]
        },
        "boolean":{
            "patterns": [
                {
                    "name":"constant.language",
                    "match": "(true|false)" 
                }
            ]
        }
    }
}